<%= form_for(@url) do |f| %>
  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
    </div>
  <% end %>

  <div class="form-group">
    <label for="originalUrl">Original URL To Shorten</label>
    <%= f.text_field :original, placeholder: "Please enter a URL", class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

